---
import { Image } from 'astro:assets';
import SkillsDark from '../assets/skills-bg-dark.png';
import SkillsLight from '../assets/skills-bg-light.png';
import Profile from '../assets/profile-circle.webp';
---

<section id='about'>
    <div class='flex flex-col md:flex-row justify-between w-full h-full py-6'>
        <div class='w-full font-extrabold space-y-2 md:space-y-8 py-4'>
            <p class='text-black dark:text-white text-2xl md:text-3xl 3xl:text-6xl'>
                <span class='text-da-gray dark:text-lg-gray'>Hello! I'm</span>
                Utsav Deep
            </p>
            <p class='text-black dark:text-white text-2xl md:text-3xl 3xl:text-6xl'>
                <span class='text-da-gray dark:text-lg-gray'>a</span>
                Test Automation Specialist
            </p>
            <p class='text-da-gray dark:text-lg-gray font-medium text-justify md:text-left'>
                Test Engineer with over 2.5 years of experience specializing in automation testing. Proficient in a
                variety of modern automation tools and programming languages including JAVA, Selenium, Cucumber, Appium,
                and other test automation tools. Demonstrated ability to design and improve test frameworks and drive
                efficient, reliable results.
            </p>
            <div class='space-y-2 md:space-y-8'>
                <!-- TODO: Add social component here -->
                <ul class='flex flex-row w-full md:w-6/12 justify-between py-4 text-black dark:text-white'>
                    <li class='rounded-full text-white dark:text-black bg-da-gray p-8'>
                        <a href='#'></a>
                    </li>
                    <li class='rounded-full text-white dark:text-black bg-da-gray p-8'>
                        <a href='#'></a>
                    </li>
                    <li class='rounded-full text-white dark:text-black bg-da-gray p-8'>
                        <a href='#'></a>
                    </li>
                    <li class='rounded-full text-white dark:text-black bg-da-gray p-8'>
                        <a href='#'></a>
                    </li>
                </ul>
                <!-- TODO: Add Resume and Contact section links here -->
                <ul
                    class='flex flex-row w-full md:w-6/12 2xl:w-4/12 justify-evenly md:justify-between text-black dark:text-white text-2xl md:text-3xl 3xl:text-4xl font-extrabold'
                >
                    <li class='text-teal'>
                        <a href='#'>Contact</a>
                    </li>
                    <li>
                        <a href='#'>Resume</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class='w-full md:w-4/5 2xl:w-4/6 flex justify-center'>
            <Image
                src={Profile}
                alt='All the technologies I have worked with'
                class='animate-fade size-56 md:size-64 2xl:size-96 animate-ease-in animate-duration-[300ms]'
            />
        </div>
    </div>
    <Image
        src={SkillsLight}
        alt='All the technologies I have worked with'
        class='dark:invisible visible absolute bottom-0 right-0 z-[-1] animate-fade animate-ease-in animate-duration-[300ms] hidden md:block md:w-3/6 2xl:w-auto'
    />
    <Image
        src={SkillsDark}
        alt='All the technologies I have worked with'
        class='dark:visible invisible absolute bottom-0 right-0 z-[-1] animate-fade animate-ease-in animate-duration-[300ms] hidden md:block md:w-3/6 2xl:w-auto'
    />
</section>
