---
import { iconPaths } from './IconPath';
import type { HTMLAttributes } from 'astro/types';

interface Props {
    icon: keyof typeof iconPaths;
    color?: string;
    size?: string;
    style?: string;
}

const { color = 'currentcolor', icon, style = 'w-8 h-8', size } = Astro.props;
const iconPath = iconPaths[icon];

const attrs: HTMLAttributes<'svg'> = {};
if (size) attrs.style = { '--size': size };
---

<svg xmlns='http://www.w3.org/2000/svg' viewBox="0 0 24 24" class={style} aria-hidden='true' fill={color} {...attrs}>
    <path d={iconPath} />
</svg>
