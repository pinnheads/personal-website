---
import Icon from './Icon.astro';

interface Props {
    project: {
        name: string;
        isFeatured: boolean;
        description: string;
        highlights: [string];
        github: string;
        live: string;
    };
}
const { project } = Astro.props;
---

<div class='my-2 flex flex-col portrait:flex-col lg:flex-row items-center space-y-8 md:space-x-12'>
    <div
        class='flex flex-col md:flex-row items-center h-full relative before:absolute before:bottom-[-5%] b before:bg-teal dark:before:bg-teal before:right-[-5%] before:w-full before:h-full before:content-[""] md:hover:before:bottom-[-8%] md:hover:before:right-[-8%] md:hover:before:grayscale before:ease-linear before:duration-500 group'
        data-aos='fade-right'
    >
        <!-- TODO: Make this dynamic with the resume repo -->
        <img
            src='src/assets/site-preview.png'
            alt='Site card'
            class='rounded-sm w-full group-hover:scale-105 ease-linear duration-500 portrait:max-w-screen-sm md:max-w-screen-md grayscale group-hover:grayscale-0'
        />
    </div>
    <div class='flex flex-col text-da-gray dark:text-lg-gray space-y-4 h-full w-full' data-aos='fade-left'>
        <p
            class='flex items-center font-semibold text-black dark:text-white text-lg md:text-2xl after:content-["Featured"] after:text-teal after:font-bold after:bg-teal/25 after:border-2 after:border-teal after:rounded-full after:px-2 after:mx-2 after:text-xs after:animate-fade-up after:animate-delay-750'
        >
            {project.name}
        </p>
        <p class='font-medium text-da-gray dark:text-lg-gray md:text-lg text-justify'>
            {project.description}
        </p>
        <div class='flex flex-wrap text-lg-gray dark:text-da-gray justify-start'>
            {
                project.highlights.map((name) => (
                    <p class='hover:text-teal font-medium mr-2 md:mr-4 ease-linear duration-300 cursor-default hover:scale-105'>
                        {name}
                    </p>
                ))
            }
        </div>
        <div class='flex flex-row items-center space-x-6'>
            {
                project.github ? (
                    <a
                        class='font-semibold flex items-start hover:underline underline-offset-2'
                        target='_blank'
                        href={project.github}
                    >
                        <Icon
                            icon='github'
                            style='ml-1 w-6 h-6 hover:scale-110 hover:fill-black dark:hover:fill-white ease-linear duration-500'
                        />
                    </a>
                ) : (
                    ''
                )
            }
            {
                project.live ? (
                    <a
                        class='text-teal flex items-center font-semibold hover:underline underline-offset-2'
                        target='_blank'
                        href={project.live}
                    >
                        <Icon icon='arrow' style='ml-1 mt-2 w-6 h-6' />
                        Live
                    </a>
                ) : (
                    ''
                )
            }
        </div>
    </div>
</div>
