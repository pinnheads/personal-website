---
import Icon from './Icon.astro';

interface Props {
    project: {
        name: string;
        isFeatured: boolean;
        description: string;
        highlights: [string];
        github: string;
        live: string;
    };
}
const { project } = Astro.props;
---

<div
    class='bg-black dark:bg-white group text-white dark:text-black p-4 rounded-md w-full h-full flex flex-col justify-between min-h-72 hover:-translate-y-3 hover:shadow-lg hover:shadow-teal ease-linear duration-300'
>
    {project.live ? '' : project.github ? '' : ''}
    <div class='flex flex-row items-start justify-between'>
        <Icon icon='folder' style='fill-da-gray w-12 h-12' />
        <div class='flex flex-row items-center space-x-3'>
            {
                project.github ? (
                    <a
                        class='font-semibold flex items-start hover:underline underline-offset-2'
                        target='_blank'
                        href={project.github}
                    >
                        <Icon
                            icon='github'
                            style='ml-1 w-6 h-6 ease-linear duration-500 hover:scale-110 hover:fill-teal'
                        />
                    </a>
                ) : (
                    ''
                )
            }
            {
                project.live ? (
                    <a
                        class='text-teal flex items-center font-semibold hover:underline underline-offset-2'
                        target='_blank'
                        href={project.live}
                    >
                        Live
                    </a>
                ) : (
                    ''
                )
            }
        </div>
    </div>
    <p class='font-bold text-lg h-1/4 pt-3 capitalize ease-in duration-200 group-hover:text-teal'>
        {project.name}
    </p>
    <p class='items-start h-2/4 text-justify text-sm'>{project.description}</p>
    <div class='flex flex-wrap h-1/4 text-lg-gray dark:text-da-gray items-end'>
        {
            project.highlights.map((name) => (
                <p class='hover:text-teal font-medium mr-2 md:mr-4 ease-linear duration-300 cursor-default hover:scale-105'>
                    {name}
                </p>
            ))
        }
    </div>
</div>
